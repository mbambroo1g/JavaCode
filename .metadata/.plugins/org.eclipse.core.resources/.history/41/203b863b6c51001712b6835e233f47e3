package com.assignment1;

public abstract class Vehicle {
	String color;
	int noOfWheels;
	String model;
	int initialSpeed;
	int finalSpeed;
	int time;
	
	public Vehicle(String color, int noOfWheels, String model) {
		super();
		this.color = color;
		this.noOfWheels = noOfWheels;
		this.model = model;
	}

	public void accelerate(initialSpeed, finalSpeed, time){
		float acceleration;
		acceleration = (newSpeed-initialSpeed)/time;
		System.out.println("Acceleration of the vehicle is: "+acceleration);
	}
	public abstract void decelerate();
	public abstract void move();
	
}


